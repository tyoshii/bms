{%extends 'layout/admin.twig'%}

{%block content%}

{# header #}
{{parent()}}

<div class="row">

<div class="col-md-4">
<h3>新規リーグ追加</h3>
{{ form }}
</div>

<div class="col-md-8">

<table class="table">

<thead>
<tr>
<th>id</th>
<th>リーグ名</th>
<th></th>
</tr>
</thead>

<tbody>
