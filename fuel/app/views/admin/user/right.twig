<table class="table">

<thead>
<tr>
<th>id</th>
<th>ユーザー名</th>
<th>メール</th>
<th>権限グループ</th>
<th>更新</th>
<th>無効</th>
</tr>
</thead>

<tbody>
{% for user in users %}
<tr>
<td>{{ user.id }}</td>
<td>{{ user.username }}</td>
<td>{{ user.email }}</td>
<td>{{ user.group }}</td>
<td>
  <a href="/admin/user/{{user.id}}" class="btn btn-info">更新</a>
<td>
<form method="POST">
<input type="hidden" name="username" value="{{user.username}}">
<input type="submit" class="btn btn-warning" onClick="return window.confirm('このユーザーを無効にしてよろしいですか？');" value="無効">
</form>
</td>
</tr>
{% endfor %}
</tbody>

</table>
