      <li class="bms-navbar-top"><a href="/">Top</a></li>
      {%block li_game %}<li>{%endblock%}<a href="/game/list">ゲームデータ入力</a></li>
      {%block li_score%}<li>{%endblock%}<a href="/score">成績</a></li>
