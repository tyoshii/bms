    <ul class="nav navbar-nav navbar-right">
      {% if login == true %}
        <li><a href="/user/info">{{screen_name}}</a></li>
        <li><a href="/logout">Logout</a></li>
      {% else %}
        {{ login_form }}
      {% endif %}
