<!DOCTYPE html>
<html>
  <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">
    <title>
        {%- block title -%}
            Baseball Management System
        {% endblock %}
    </title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta property="og:title" content="Baseball Management System">
    <meta property="og:description" content="野球の成績管理">
    <meta property="og:url" content="http://bm-s.info">
    <meta property="og:image" content="http://bm-s.info/favicon.ico">
    <meta http-equiv="content-language" content="ja">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0">

    <link rel="icon" type="image/vnd.microsoft.icon" href="/favicon.ico" size="16x16">
    <link rel="apple-touch-icon" href="/favicon.ico">

    {% block css %}
    <link href="/jquery-ui/css/ui-lightness/jquery-ui-1.10.4.custom.min.css" rel="stylesheet">
    <link href="/twbootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/select2/select2.css" type="text/css" rel="stylesheet">
    <link href="/datepicker/css/datepicker.css" type="text/css" rel="stylesheet">
    <link href="/datatable/media/css/jquery.dataTables.min.css" type="text/css" rel="stylesheet">
    <link href="/css/bms.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    {{ css }}

    {% endblock css %}

  </head>
  <body>

<div id="wrap">

{# header #}
<nav class="navbar navbar-default" role="navigation">

{# ステージング環境への誘導 #}
{%if induct_each_env%}
<div class="alert alert-info alert-dismissable" role="induct_each_env">
<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
Switching each env : 
<a class="alert-link" onClick="location.href='http://'+location.hostname;">production</a>
/
<a class="alert-link" onClick="location.href='http://'+location.hostname+':8080';">staging</a>
/
<a class="alert-link" onClick="location.href='http://'+location.hostname+':9999';">test</a>
</div>
{%endif%}

{# production以外は上部に赤い線 #}
{%if env and env != 'production'%}
<div env="{{env}}">FUEL_ENV = {{env}}</div>
{%endif%}

  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bms-navbar">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/"><strong>BMS</strong></a>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bms-navbar">
    <ul class="nav navbar-nav">
      {%block li_team %}<li>{%endblock%}<a href="/team">チーム一覧</a></li>
      {%block li_game %}<li>{%endblock%}<a href="/game">試合一覧</a></li>
      {%block li_score%}<li>{%endblock%}<a href="/score">成績</a></li>
<!--
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">管理<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="#">Action</a></li>
          <li><a href="#">Another action</a></li>
          <li><a href="#">Something else here</a></li>
          <li class="divider"></li>
          <li><a href="#">Separated link</a></li>
          <li class="divider"></li>
          <li><a href="#">One more separated link</a></li>
        </ul>
      </li>
-->
      {% if auth_has_access('moderator.moderator') %}
        <li class="bms-navbar-admin"><a href="/admin">管理者Menu</a></li>
      {% endif %}
    </ul>
<!--
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
-->

    <ul class="nav navbar-nav navbar-right">
      {% if auth_check() %}
        <li><a href="/user/info"><img id="user-icon" src="{{usericon}}" height="32" width="32"></a></li>
        <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span>&nbsp;Logout</a></li>
			{% else %}
				<li><a href="/login?url={{ current_url() }}">ログイン</a></li>
      {% endif %}
    </ul>
<!--
      <li><a href="#">Link</a></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="#">Action</a></li>
          <li><a href="#">Another action</a></li>
          <li><a href="#">Something else here</a></li>
          <li class="divider"></li>
          <li><a href="#">Separated link</a></li>
        </ul>
      </li>
-->
  </div><!-- /.navbar-collapse -->
</nav>

{# flash error #}
{% if get_flash('error') %}
<div class="alert alert-danger alert-dismissable" role="alert-error">
<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
<span><strong>Error!</strong> {{ get_flash('error') }}</span>
</div>
{% endif %}

{# flash info #}
{% if get_flash('info') %}
<div class="alert alert-info alert-dismissable" role="alert-info">
<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
<span><strong>Information</strong> {{ get_flash('info') }}</span>
</div>
{% endif %}

{# main #}
<div class="container">
{% block content %}{% endblock %}
</div>

<div id="push"></div>
</div>{# div#wrap #}

{# footer #}
<div id="footer">
<hr>
<div><b>BMS - Baseball Management System</b></div>
<div>System Version {{config('system.version')}} / Updated at {{config('system.update_at')}}</div>
<div>&nbsp;</div>
<a href="mailto:tyoshii716@gmail.com">お問い合わせ / フィードバック</a> | <a href="https://github.com/tyoshii/bms">GitHub</a>
<div>&nbsp;</div>
</div>

</body>
</html>

{% block js %} 
<script type="text/javascript" src="/js/jquery.js"></script>
