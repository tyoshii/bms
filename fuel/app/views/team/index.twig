{% extends 'layout/team.twig' %}

{% block main %}

<h2>試合一覧</h2>

{% for game in games %}

{% if loop.first %}
<table class="table">
<thead>
<tr>
<th>日付</th>
<th>対戦相手</th>
<th>スコア</th>
<th>勝敗</th>
<th>詳細</th>
</tr>
</thead>
<tbody>
{% endif %}

<tr>
<td>{{ game.date }}</td>
<td>{{ game.games_teams.opponent_team_name }}</td>
<td>
{% if game.games_teams.order == 'top' %}
{{ game.tsum }} - {{ game.bsum }}
{% else %}
{{ game.bsum }} - {{ game.tsum }}
{% endif %}
</td>
<td>{{ game.result }}</td> 
<td><a href="/team/{{ team.url_path }}/game/{{ game.id }}">詳細</a></td>
</tr>

{% if loop.last %}
</tbody>

<tfoot>
<tr>
<td colspan="5">
<div class="pull-right">
<a href="/team/{{ team.url_path }}/game/add" class="btn btn-info">新規試合追加</a>
</div>
</td>
</tr>
</tfoot>

</table>
{% endif %}

{% else %}
まだ試合がありません。
{% endfor %}

<h2>所属選手一覧</h2>

<table class="table">
<thead>
<tr>
<th>名前</th>
<th>背番号</th>
</tr>
</thead>
<tbody>

{% for player in players %}
<tr>
<td>{{ player.name }}</td>
<td>{{ player.number }}</td>
</tr>
{% endfor %}

</tbody>
</table>

{% endblock main %}
