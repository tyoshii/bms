{% extends 'layout/team.twig' %}

{% block main %}

<h1>所属選手一覧</h1>

{% for player in players %}

{% if loop.first %}
<table class="table">
<thead>
<tr>
<th>名前</th>
<th>背番号</th>
<th>詳細</th>
</tr>
</thead>
<tbody>
{% endif %}

<tr>
<td>{{ player.name }}</td>
<td>{{ player.number }}</td>
<td><a href="{{ current_url() }}/{{ player.id }}">詳細</a></td>
</tr>

{% if loop.last %}
</tbody>
</table>
{% endif %}

{% endfor %}

{% endblock main %}
