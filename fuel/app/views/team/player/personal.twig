{% extends 'layout/team.twig' %}

{% block main %}

<div class="pull-right">
<a href="{{ global.team.href }}/player">選手一覧へ戻る</a>
</div>

<h3>基本情報</h3>

<table class="table">
<tbody>

<tr>
<td rowspan="2">
<img />イメージ
</td>
<th>名前</th>
<td>{{ player.name }}</td>
</tr>

<tr>
<th>背番号</th>
<td>{{ player.number }}</td>
</tr>

</tbody>
</table>


<h3>成績</h3>
comming soon ...

<h3>試合ごとの野手成績</h3>
{% for stats in stats_per_games %}

{% if loop.first %}
<table class="table table-hover">
<thead>
<tr>
<th>日付</th>
<th>相手</th>
<th>成績</th>
</tr>
</thead>
</tbody>
{% endif %}

<tr data-game-id="{{ stats.game_id }}">
<td>
<a href="{{ global.team.href }}/game/{{ stats.game_id }}">{{ stats.date }}</a>
</td>
<td data-opponent-team-id="{{ stats.opponent_team_id }}">
{{ stats.opponent_team_name }}
</td>
<td>
<div class="pull-left">
{% for detail in stats.details %}
<span class="{{detail.color}}">{{ detail.result }}</span>{% if not loop.last %}、{% endif %}
{% endfor %}
</div>
</td>
</tr>

{% if loop.last %}
</tbody>
</table>
{% endif %}

{% endfor %}

{% endblock %}
