{% extends "layout/layout.twig" %}

{% block content %}


<div class="row">

<div class="col-md-6">

{% if auth_check() %}

{% for team in my_teams %}

{% if loop.first %}
<table class="table">
<thead>
<tr>
<th>所属チーム名</th>
</tr>
</thead>
<tbody>
{% endif %}

<tr>
<td><a href="/team/{{ team.url_path }}">{{ team.name }}</a></td>
</tr>

{% if loop.last %}
</tbody>
</table>
{% endif %}

{% else %}
<h3>所属しているチームがありません！</h3>
<div>
<a href="/team/regist">新しくチームを作る</a> か自分のチームを探してみましょう！
</div>

{% endfor %}

{%else%}

<h3>ログインして使う</h3>
{{login_form}}

<p><a href="/auth/oauth/facebook">Facebookでログイン</a>
<p><a href="/auth/oauth/google">Googleでログイン</a>

<p><a href="/forget_password">パスワードを忘れた場合はこちら</a></p>

<h3>新しくユーザー登録する</h3>
<p><a href="/register">新規ユーザー登録はこちら</a></p>
{%endif%}

</div>

<div class="col-md-6">
<h3>チームを探す</h3>

<table class="table" id="teams">
<thead>
<tr>
<th>チーム名</th>
</tr>
</thead>

<tbody>
{% for team in teams %}
<tr>
<td><a href="/team/{{ team.url_path }}">{{ team.name }}</a></td>
</tr>
{% endfor %}
</tbody>
</table>

</div>

</div>


{% endblock content %}

{% block js %}
{{ parent() }}
<script type="text/javascript">
$(document).ready(function(){
  $("#teams").dataTable({
    "order": [],
    "bPaginate": true,
    "bLengthChange": false,
    "bFilter": true,
    "bInfo": false,
    "bAutoWidth": false,
  });
});
</script>
{% endblock js %}
